{
  "name": "ai-autocomplete-rage",
  "displayName": "ai-autocomplete-rage",
  "description": "Disable AI autocomplete automatically",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Autocomplete Rage Settings",
      "properties": {
        "aiAutocompleteRage.escapeKeypressCount": {
          "type": "number",
          "default": 5,
          "description": "Number of escape key presses needed to trigger the disabling autocomplete"
        },
        "aiAutocompleteRage.disableTimeoutSeconds": {
          "type": "number",
          "default": 2,
          "description": "Timeout in seconds to count escape key presses to disable autocomplete"
        },
        "aiAutocompleteRage.enableTimeoutSeconds": {
          "type": "number",
          "default": 120,
          "description": "Timeout in seconds until autocomplete is re-enabled"
        }
      }
    },
    "commands": [
        {
            "command": "ai-autocomplete-rage.handleEscape",
            "title": "Handle Escape Key Press"
        }
    ],
    "keybindings": [{
        "command": "ai-autocomplete-rage.handleEscape",
        "key": "escape",
        "when": "editorTextFocus"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
